<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_load_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="初始值"
            android:textColor="@color/app_green_500"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/app_green_500"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/app_white"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout_"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/app_01d"
            android:gravity="center"
            android:text="登出"
            android:textColor="@color/app_white"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_boolean_info_"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="false"
            android:textColor="@color/app_green_500"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_number_info_"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="-1"
            android:textColor="@color/app_green_500"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_saved_value_"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/app_f1a"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/app_white"
                android:textSize="14sp"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reset_value_"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/app_f1a"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/app_white"
                android:textSize="14sp"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

